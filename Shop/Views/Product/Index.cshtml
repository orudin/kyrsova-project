@model IEnumerable<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product list</h2>
        </div>
         <div class="col-6 text-right">
            <a asp-action="CreateEdit" asp-controller="Product" class="btn-primary btn" >New product</a>
        </div>
    </div>
    @if(Model.Count() > 0)
    {
        <table class="table table-borderred table-striped">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Category</td>
                    <td>Image</td>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                  {
                    <tr>
                        <td width="30%">@item.Name</td>
                        <td width="15%">@item.Price</td>
                        <td width="15%">@item.Category.Name</td>
                        <td width="15%"><img width="100px" height="100px" src="@ENV.ImagePath@item.Image" alt="@item.Name" /></td>
                        <td>
                            <div class="w-75 btn-group">
                                <a asp-route-Id="@item.Id" asp-action="CreateEdit" class="btn btn-warning mx-2" >Edit</a>
                                <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                  }
            </tbody>
        </table>
    }
    else
    {
        <p>No product found.</p>
    }


</div>