@model IEnumerable<Shop.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary" asp-controller="Category">Create new category</a>
        </div>
    </div>
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model)
                {
                    <tr>
                        <td width="50%">@category.Name</td>
                        <td width="30%">@category.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group"> 
                                <a asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-warning mx-2" asp-controller="Category">Edit</a>
                                <a asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger mx-2" asp-controller="Category">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category found.</p>
    }
</div>